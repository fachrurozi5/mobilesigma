<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <solid android:color="#42A5F5" />

            <stroke
                android:width="3dp"
                android:color="#2f6699" />

            <corners android:radius="10dp" />

            <padding android:left="10dp"
                     android:top="0dp"
                     android:right="10dp"
                     android:bottom="0dp"/>
        </shape></item>
        <item ><bitmap android:gravity="right" android:src="@android:drawable/arrow_down_float" />   // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>

</selector>