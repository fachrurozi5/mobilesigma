<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_outlet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

            <TextView
                android:id="@+id/simple_list_item_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:text="IKMS"/>

            <TextView
                android:id="@+id/simple_list_item_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/simple_list_item_1"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Kecap Manis Sachet New 14 ml"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/text_sell_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/simple_list_item_2"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="Price:"/>

            <TextView
                android:id="@+id/tv_sell_price"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/simple_list_item_2"
                android:layout_toRightOf="@id/text_sell_price"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:text="999.999.999"
                android:textColor="#33ff88"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sell_price"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingBottom="16dp"
                android:text="Stock:"/>

            <TextView
                android:id="@+id/tv_stock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_sell_price"
                android:layout_toRightOf="@id/text_sell_price"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:ellipsize="marquee"
                android:gravity="right"
                android:singleLine="true"
                android:text="284"
                android:textColor="#33ff88"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
