<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_so_no"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_jenis_barang"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:singleLine="true"
        android:ellipsize="middle"
        android:gravity="center_vertical"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_unit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="center_vertical"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_jumlah_order"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_harga_list"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_persen_d_nusantara"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_nilai_d_nusantara"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_persen_d_principal"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_nilai_d_principal"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

    <TextView
        android:id="@+id/item_so_sub_total"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:gravity="end|center"
        android:layout_gravity="center" />

</LinearLayout>
